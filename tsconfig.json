{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "target": "es2015",
    "sourceMap": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "suppressExcessPropertyErrors": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}